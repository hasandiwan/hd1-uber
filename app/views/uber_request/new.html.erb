<h1>New Uber Request</h1>
<div class="container">
    <div class="container">
        <div class="jumbotron">
            <form>
                <div class="form-group">
                        <label for="fromAddress">From</label>
                        <input type="text" class="form-control" id="fromAddress"/>
                </div>
                <div class="form-group">
                        <label for="toAddress">Destination</label>
                        <input type="text" class="form-control" id="toAddress"/>
               </div>
               <button type="button" class="btn btn-outline-success">Submit</button>
            </form>
    <div id="mapdiv"></div>
    <script src="https://cdn.jsdelivr.net/npm/openlayers@4.6.5/dist/ol.min.js" integrity="sha384-Iuqn7//GO61lKlF2s08D9VRfcympY7cba3xCMBB+gnXV8EsqNjTgvHLdvIXSc7Xb" crossorigin="anonymous"></script>
    <script>
    $(document).ready(function() {
        $('form').submit(function(evt) {
            map = new OpenLayers.Map("mapdiv");
            map.addLayer(L.tileLayer('https://{s}.tiles.mapbox.com/v3/spatial.b625e395/{z}/{x}/{y}.png', { attribution: ''})).locate({setView: true, maxZoom: 16});
            alert('form submitted');
            evt.preventDefault();
        });
    });
    </script>
